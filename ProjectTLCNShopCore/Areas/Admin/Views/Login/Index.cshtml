@model ProjectTLCNShopCore.Areas.Admin.Models.UserLogin

@*@{
	ViewData["Title"] = "Admin Login";
	//Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}*@

<!DOCTYPE html>
<html lang="en">
<head>

	<!-- start: Meta -->
	<meta charset="utf-8">
	<!-- end: Meta -->
	<!-- start: Mobile Specific -->
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>Admin Login</title>
	<!-- end: Mobile Specific -->
	<!-- start: CSS -->
	<link id="bootstrap-style" href="~/css/bootstrap.min.css" rel="stylesheet">
	<link id="base-style" href="~/css/style.css" rel="stylesheet">
	<link href="~/css/bootstrap-responsive.min.css" rel="stylesheet">
	<link id="base-style-responsive" href="~/css/style-responsive.css" rel="stylesheet">
	<!-- end: CSS -->
	<!-- start: Favicon -->
	<link rel="shortcut icon" href="favicon.ico">
	<!-- end: Favicon -->
	<link rel="stylesheet" href="http://cdnjs.cloudflare.com/ajax/libs/jasny-bootstrap/3.1.3/css/jasny-bootstrap.min.css" />


	<style type="text/css">
		body {
			background: url('~/../../../img/bg-login.jpg') !important;
		}
	</style>

</head>
<body>
	<div class="container-fluid-full">
		<div class="row-fluid">		
			<div class="row-fluid">
				
				<div class="login-box">
					<div class="row text-center "><h2><strong>Đăng Nhập Hệ Thống Quản Lý</strong></h2></div>
					<div class="icons">
						<a href="/"><i class="halflings-icon home"></i></a>
						<a href="#"><i class="halflings-icon cog"></i></a>
					</div>
					<h2>Login to your account</h2>
					<form class="form-horizontal" action="Login" method="post">
						<fieldset>
							@Html.ValidationSummary(true)
							<div class="input-prepend" title="Email">
								<span class="add-on"><i class="halflings-icon user"></i></span>
								<input class="input-large span10" name="email" id="email" type="text" placeholder="Enter email" />
								@*@Html.ValidationMessageFor(x => x.Email,"",new { @class= "text-center text-danger" })*@
							</div>
							<div class="clearfix"></div>
							<div class="input-prepend" title="Password">
								<span class="add-on"><i class="halflings-icon lock"></i></span>
								<input class="input-large span10" name="password" id="password" type="password" placeholder="Enter password" />
							</div>
							<div class="clearfix"></div>

							<label class="remember" for="remember"><input type="checkbox" id="remember" name="RememberMe" />Remember me</label>
							<div class="button-login">
								<button type="submit" class="btn btn-primary">Login</button>
							</div>
							<div class="clearfix"></div><br/>
							@if (ViewBag.Error != null)
							{																
								<div id="error" class="alert alert-danger text-center" role="alert">@Html.ValidationMessageFor(x => x.Email)<br/>@ViewBag.Error</div>
							}						
						</fieldset>
					</form>
					<hr>
					<h3>Forgot Password?</h3>
					<p>
						No problem, <a href="#">click here</a> to get a new password.
					</p>
				</div><!--/span-->
			</div><!--/row-->

		</div><!--/.fluid-container-->

	</div><!--/fluid-row-->
	<!-- start: JavaScript-->
	<script src="~/myjs/scripttemplate/jquery-1.9.1.min.js"></script>
	<script src="~/myjs/scripttemplate/jquery-migrate-1.0.0.min.js"></script>
	<script src="~/myjs/scripttemplate/jquery-ui-1.10.0.custom.min.js"></script>
	<script src="~/myjs/scripttemplate/jquery.ui.touch-punch.js"></script>
	<script src="~/myjs/scripttemplate/modernizr.js"></script>
	<script src="~/myjs/scripttemplate/bootstrap.min.js"></script>
	<script src="~/myjs/scripttemplate/jquery.cookie.js"></script>
	<script src="~/myjs/scripttemplate/fullcalendar.min.js"></script>
	<script src="~/myjs/scripttemplate/jquery.dataTables.min.js"></script>
	<script src="~/myjs/scripttemplate/excanvas.js"></script>
	<script src="~/myjs/scripttemplate/jquery.flot.js"></script>
	<script src="~/myjs/scripttemplate/jquery.flot.pie.js"></script>
	<script src="~/myjs/scripttemplate/jquery.flot.stack.js"></script>
	<script src="~/myjs/scripttemplate/jquery.flot.resize.min.js"></script>
	<script src="~/myjs/scripttemplate/jquery.chosen.min.js"></script>
	<script src="~/myjs/scripttemplate/jquery.uniform.min.js"></script>
	<script src="~/myjs/scripttemplate/jquery.cleditor.min.js"></script>
	<script src="~/myjs/scripttemplate/jquery.noty.js"></script>
	<script src="~/myjs/scripttemplate/jquery.elfinder.min.js"></script>
	<script src="~/myjs/scripttemplate/jquery.raty.min.js"></script>
	<script src="~/myjs/scripttemplate/jquery.iphone.toggle.js"></script>
	<script src="~/myjs/scripttemplate/jquery.uploadify-3.1.min.js"></script>
	<script src="~/myjs/scripttemplate/jquery.gritter.min.js"></script>
	<script src="~/myjs/scripttemplate/jquery.imagesloaded.js"></script>
	<script src="~/myjs/scripttemplate/jquery.masonry.min.js"></script>
	<script src="~/myjs/scripttemplate/jquery.knob.modified.js"></script>
	<script src="~/myjs/scripttemplate/jquery.sparkline.min.js"></script>
	<script src="~/myjs/scripttemplate/counter.js"></script>
	<script src="~/myjs/scripttemplate/retina.js"></script>
	<script src="~/myjs/scripttemplate/custom.js"></script>
	
	<script> 
		$('#error').delay(3000).slideUp("slow");
	</script>
</body>
</html>
